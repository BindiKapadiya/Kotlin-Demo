<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Services.WorkManagerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Background Service" />

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Start Service" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Stop Service" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Foreground Service" />

    <Button
        android:id="@+id/btnStartForegroundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Start Foreground Service" />

    <Button
        android:id="@+id/btnStopForegroundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Stop Foreground Service" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Dynamic Notification"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStartDynamicNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Show Offer" />
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Work Manager"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnWorkManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Start service using WorkManager" />

</LinearLayout>